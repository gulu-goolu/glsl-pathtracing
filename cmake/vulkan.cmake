macro(add_vulkan_support target)
    if (${CMAKE_SYSTEM_NAME} MATCHES "Windows")
        message("windows platform")
        target_include_directories(${target} PRIVATE $ENV{VK_SDK_PATH}/Include)
        target_link_directories(${target} PRIVATE $ENV{VK_SDK_PATH}/Lib)
        target_compile_definitions(${target} PRIVATE -DVK_USE_WIN32_PLATFORM_KHR)
        target_link_libraries(${target} vulkan-1)
    endif ()
endmacro()